@model Employee
@{
    ViewBag.Title = "View Employees";
}
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Id</th><th>Name</th><th>Salary</th><th>Dept#</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            <tr><td>@Model.Id</td><td>@Model.EmpName</td><td>@Model.Salary</td><td>@Model.DeptNo</td></tr>

        }
    </tbody>
</table>
